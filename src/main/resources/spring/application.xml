<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:beans="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
            				http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
            				http://www.springframework.org/schema/context
          					http://www.springframework.org/schema/context/spring-context-4.0.xsd">

		<context:annotation-config/>
		<context:component-scan base-package="com.glueball.snoop.*" />
		<import resource="classpath:spring/data-access.xml" />

		<bean id="dbLoaderVisitor" class="com.glueball.snoop.visitor.DbLoaderVisitor">
			<property name="docPathBean" ref="documentPath"/>
		</bean>

		<bean id="dataLoader" class="com.glueball.snoop.bean.DataLoader">
			<constructor-arg value="/home/karesz" />
			<property name="visitor" ref="dbLoaderVisitor" />
		</bean>
		
</beans>