<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
        
        .file {
            color: blue;
            cursor: pointer;
            text-decoration: underline;
            }
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalPanel>
			<g:SimplePanel width="150px" />
			<g:HorizontalPanel>
				<g:Image ui:field="mimeIcon"/>
				<g:Grid>
					<g:row>
						<g:customCell><g:Label text='File:' /></g:customCell>
						<g:customCell><g:Label ui:field="link" styleName='{style.file}' /></g:customCell>
					</g:row>
					<g:row>
						<g:customCell><g:Label text='Title:' /></g:customCell>
						<g:customCell><g:Label  ui:field="title" /></g:customCell>
					</g:row>
					<g:row>
						<g:customCell><g:Label text='Author:' /></g:customCell>
						<g:customCell><g:Label ui:field="author" /></g:customCell>
					</g:row>
					<g:row>
						<g:customCell><g:Label text='Description: ' /></g:customCell>
						<g:customCell><g:Label ui:field="description" /></g:customCell>
					</g:row>
				</g:Grid>
			</g:HorizontalPanel>
		</g:HorizontalPanel>
		<g:SimplePanel width="100%" height="30px" />
	</g:HTMLPanel>
</ui:UiBinder> 