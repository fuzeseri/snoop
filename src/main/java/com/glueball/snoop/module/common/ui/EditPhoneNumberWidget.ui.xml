<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="editableWidget.css">
		.style.textBoxAreaCode {
			font-weight: bold;
		}
		.style.textBoxNumber {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel>
			<g:Grid>
				<g:row>
					<g:customCell>
						<g:HorizontalPanel> 
							<g:Label text='+' styleName="{style.fontStyleValue}" />
							<g:SimplePanel>
								<g:TextBox ui:field='countryCode' maxLength='4' visibleLength="2" styleName="{style.textBoxAreaCode}" />
							</g:SimplePanel>
							<g:SimplePanel>
								<g:TextBox ui:field='areaCode' maxLength='3' visibleLength="2" styleName="{style.textBoxAreaCode}" />
							</g:SimplePanel>
							<g:SimplePanel>
								<g:TextBox ui:field='number' maxLength='10' visibleLength="7" styleName="{style.textBoxNumber}" />
							</g:SimplePanel>
						</g:HorizontalPanel>
					</g:customCell>
				</g:row>
			</g:Grid>
			<g:Grid>
				<g:row>
					<g:customCell>
						<g:Label text='Callable From: ' styleName="{style.fontStyleValue}" />
					</g:customCell>
					<g:customCell>
						<g:HorizontalPanel>
							<g:ListBox ui:field='fromHour'>
								<g:item value='08'>08</g:item>
								<g:item value='09'>09</g:item>
								<g:item value='10'>10</g:item>
								<g:item value='11'>11</g:item>
								<g:item value='06'>06</g:item>
								<g:item value='05'>05</g:item>
								<g:item value='04'>04</g:item>
								<g:item value='03'>03</g:item>
								<g:item value='02'>02</g:item>
								<g:item value='01'>01</g:item>
							</g:ListBox>
							<g:ListBox ui:field='fromMin'>
								<g:item value='00'>00</g:item>
								<g:item value='15'>15</g:item>
								<g:item value='30'>30</g:item>
								<g:item value='45'>45</g:item>
							</g:ListBox>							
						</g:HorizontalPanel>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text='Callable To: ' styleName="{style.fontStyleValue}" />
					</g:customCell>
					<g:customCell>
						<g:HorizontalPanel>
							<g:ListBox ui:field='toHour'>
								<g:item value='17'>17</g:item>
								<g:item value='18'>18</g:item>
								<g:item value='19'>19</g:item>
								<g:item value='20'>20</g:item>
								<g:item value='21'>21</g:item>
								<g:item value='00'>00</g:item>
								<g:item value='16'>16</g:item>
								<g:item value='15'>15</g:item>
								<g:item value='14'>14</g:item>
								<g:item value='13'>13</g:item>
								<g:item value='12'>12</g:item>
							</g:ListBox>
							<g:ListBox ui:field='toMin'>
								<g:item value='00'>00</g:item>
								<g:item value='15'>15</g:item>
								<g:item value='30'>30</g:item>
								<g:item value='45'>45</g:item>
							</g:ListBox>
						</g:HorizontalPanel>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text='Language' styleName="{style.fontStyleValue}" />
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field='language'>
							<g:item value='EN'>EN</g:item>
							<g:item value='HU'>HU</g:item>
						</g:ListBox>
					</g:customCell>
				</g:row>
			</g:Grid>
			<g:HorizontalPanel>
				<g:Label text="Active" styleName="{style.fontStyleField}" />
				<g:CheckBox ui:field='active' value='true' />
				<g:Label text="Sms" styleName="{style.fontStyleField}" />
				<g:CheckBox ui:field='sms' value='false' />
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 